package br.com.alura;

import java.io.IOException;
import java.net.HttpURLConnection;
import java.net.URL;
import java.nio.charset.MalformedInputException;

/*
 * trabalhando com CEP
 * */
public class CEP {
	public static void main(String[] args) {
		
		try {
			URL url = new URL("https://viacep.com.br/ws/01001000/json/"); //chama a URL
			//abrindo conexão http
			//essa conexao não retorna o Urlconector, por isso tem que fazer o casting
			//e lança uma exceção
			HttpURLConnection conexao = (HttpURLConnection) url.openConnection();
			//configurando a conexão para receber os métodos http
			conexao.setRequestMethod("GET");
			conexao.getInputStream();  /pegando os dados
		} catch (MalformedInputException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		
	}

}
